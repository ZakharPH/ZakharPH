#include <iostream>
#include <string>

int main(){
    std::cout<<"В алфовите 3 буквы"<<std::endl;
    std::string alf;
    alf = "abc";
    std::string c;
    int d;
    for(int i = 0;i < 3;i++){
        std::cin>> c;
        if(c[i] != '1' && c[i] != '0'){
            std::cout<<"Можно вводить только строчки из 1 и 0"<<std::endl<<"Пишите заного"<<std::endl;
            i = 0;
            c = "";
        }
    }
    std::string n;
    std::cin>> n;
    std::string h;
    for(int i = 0;i < 3;i++){
        if(n[i] = alf[0]){
            h = h + c[0];
        }
        else if(n[i] = alf[1]){
            h = h + c[1];
        }
        else if(n[i] = alf[2]){
            h = h + c[2];
        }
    }
    std::cout <<h;
}
